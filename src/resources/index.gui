<svg>
    <!-- Event date -->
    <symbol id="date-header" href="#tile-list-item" display="none">
        <text id="date-header-text" text-anchor="start" text-length="16"/>
    </symbol>

    <symbol id="event-item" href="#tile-list-item" pointer-events="visible" display="none">
        <line id="header-line" class="rect-rounder" x1="9" y1="5" x2="339" y2="5" stroke-width="10" stroke-linecap="round" fill="lightgrey" opacity="0.3" />
        <rect id="header-black" x="0" y="7" width="100%" height="5" fill="black" />

        <line id="footer-line" class="rect-rounder" x1="9" y1="5" x2="339" y2="5" stroke-width="10" stroke-linecap="round" fill="lightgrey" opacity="0.3" />
        <rect id="fotter-black" x="0" y="7" width="100%" height="6" fill="black" />

        <rect id="background-rect" x="4" y="7" width="341" height="100%-14" fill="lightgrey" opacity="0.3" />
        <textarea id="event-time-text" text-length="128" />
        <section id="event-summary-section">
            <textarea id="event-summary-text" width="100%" height="100%" text-overflow="ellipsis" text-length="128" />
        </section>
        <textarea id="event-summary-row-placeholder" />
        <textarea id="event-location-text" text-overflow="ellipsis" text-length="128" />

        <line id="calendar-identifier" x1="338" y1="5" x2="338" y2="100%-7" stroke-width="2" stroke-linecap="round" />
    </symbol>

    <use id="event-list" href="#tile-list" y="40" width="100%" height="100%-40">
        <var id="virtual" value="1" />
        <var id="separator-height-bottom" value="2" />

        <use id="date-header-pool" href="#tile-list-pool">
            <use href="#date-header" id="date-header-pool[1]"></use>
            <use href="#date-header" id="date-header-pool[2]"></use>
            <use href="#date-header" id="date-header-pool[3]"></use>
            <use href="#date-header" id="date-header-pool[4]"></use>
            <use href="#date-header" id="date-header-pool[5]"></use>
            <use href="#date-header" id="date-header-pool[6]"></use>
            <use href="#date-header" id="date-header-pool[7]"></use>
            <use href="#date-header" id="date-header-pool[8]"></use>
            <use href="#date-header" id="date-header-pool[9]"></use>
            <use href="#date-header" id="date-header-pool[10]"></use>
        </use>

        <use id="event-item-pool" href="#tile-list-pool">
            <use id="event-item-pool[0]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[1]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[2]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[3]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[4]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[5]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[6]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[7]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[8]" href="#event-item" class="tile-list-item" />
            <use id="event-item-pool[9]" href="#event-item" class="tile-list-item" />
        </use>
    </use>

    <svg id="header-container" x="0" y="0" width="100%" height="40" pointer-events="visible">
        <rect id="header" x="0" y="0" width="100%" height="100%" fill="#404040" />
        <text id="app-title" class="header-text" x="15" y="30" text-length="20" text-anchor="start">Today's Events</text>
        <image id="update-img" x="100%-40" y="-2" width="40" height="40" href="btn_combo_reset_p.png" fill="white" />
    </svg>

    <svg id="update-overlay" x="0" y="0" width="100%" height="100%" pointer-events="visible">
        <rect x="0" y="0" width="100%" height="100%" fill="#404040" opacity="0.5" />
        <use id="update-spinner" href="#spinner" />
    </svg>

    <svg id="detail-overlay" x="0" y="0" width="100%" height="100%" pointer-events="visible" display="none">
        <rect x="0" y="0" width="100%" height="100%" fill="#0f0f0f"/>
        <use href="#scrollview" x="0" y="0" width="100%" height="100%">
            <use href="#scrollview-item" id="detail-overlay-item" height="100%">
                <use id="detail-overlay-summary-text" class="detail-overlay-header-text" x="10" y="10" width="100%-20" href="#dynamic-textarea" overflow="visible">
                    <set href="#text" attributeName="text-buffer" to="Summary"/>
                    <set href='#text' attributeName='font-size' to='inherit'/>
                    <set href='#text' attributeName='text-length' to='128'/>
                </use>
                <use id="detail-overlay-location-text" class="detail-overlay-normal-text" x="10" y="$+5" width="100%-20" href="#dynamic-textarea" overflow="visible">
                    <set href="#text" attributeName="text-buffer" to="Location"/>
                    <set href='#text' attributeName='font-size' to='inherit'/>
                    <set href='#text' attributeName='text-length' to='128'/>
                </use>
                <use id="detail-overlay-time-text" class="detail-overlay-normal-text" x="10" y="$+5" width="100%-20" href="#dynamic-textarea" overflow="visible">
                    <set href="#text" attributeName="text-buffer" to="Time"/>
                    <set href='#text' attributeName='font-size' to='inherit'/>
                    <set href='#text' attributeName='text-length' to='128'/>
                </use>
                <use href="#square-button-neutral" id="detail-back-btn" y="$+10">
                    <set href="#text" attributeName="text-buffer" to="Back" />
                </use>
            </use>
        </use>
    </svg>
</svg>
